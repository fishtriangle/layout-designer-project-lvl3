//- chatlist.pug
-
  let chats = {
    "11:45": [{
      name: "Вениамин Редакторович",
      lastMessage: "o_O",
      avatar: "images/dest/avatar_4.jpg",
    }],

    "10:12": [{
      name: "Джедай Падаванов",
      lastMessage: "Привет, скоро третий проект? Уже скоро надо...",
      avatar: "images/dest/avatar_2.jpg",
    }],

    "08:53": [{
      name: "Алексей Примадонин",
      lastMessage: "Тесты упали >_<",
      avatar: "images/dest/avatar_3.jpg",
    }],
  }

  findForm = {
    formName: "Чаты", 
    formText: "Поиск по сообщениям"
  }

if hexletSwitch == "chat.html"
  div(class="chats px-4 pt-5 tab-pane fade" id="chats" role="tabpanel" aria-labelledby="chats-tab")
    include findform.pug
    ul(class="chat-list list-group mt-5")
      each val, index in chats
        each person in val
          a(href="#" class="chat-card border-gray-base shadow-sm text-secondary reset text-decoration-none mb-3")
            img.avatar(src= person.avatar)
            div(class="chat-body d-flex flex-grow-1 flex-shrink-1 flex-column")
              .chat-title
                h2(class="chat-name text-bold mb-0")= person.name
                p(class="chat-last-time text-small")= index
              p(class="chat-last-message text-small")= person.lastMessage
if hexletSwitch == "index.html"
  div(class="chats px-4 pt-5 tab-pane fade show active" id="chats" role="tabpanel" aria-labelledby="chats-tab")
    include findform.pug
    ul(class="chat-list list-group mt-5")
      each val, index in chats
        each person in val
          a(href="#" class="chat-card border-gray-base shadow-sm text-secondary text-decoration-none mb-3")
            img.avatar(src= person.avatar)
            div(class="chat-body d-flex flex-grow-1 flex-shrink-1 flex-column")
              .chat-title
                h2(class="chat-name text-bold mb-0")= person.name
                p(class="chat-last-time text-small")= index
              p(class="chat-last-message text-small")= person.lastMessage



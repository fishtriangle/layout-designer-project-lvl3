header.header-main(class="bg-primary text-white py-4 pl-3 pr-0 text-small radius-left-top-lg w-100")
  nav(class="d-flex justify-content-between w-100")
    a.header-link(href= hexletSwitch class="text-light text-decoration-none text-white mr-4 mr-xl-0")
      svg.icon-small-white(class="mr-2")
        use(xlink:href="images/dest/sprite/stack/svg/sprite.stack.svg#logo")
    ul.header-menu(class="nav" id="myTab" role="tablist")
      if hexletSwitch == "index.html"
        li.nav-item(role="presentation" class="d-sm-flex d-md-none align-items-center")
          a.header-link(href="#current-chat" class="text-light text-decoration-none nav-link" id="current-chat-tab" data-toggle="tab" role="tab" aria-controls="current-chat" aria-selected="false")
            svg.icon-small(class="mr-2")
              use(xlink:href="images/dest/sprite/stack/svg/sprite.stack.svg#chat-left-text")
            span(class="d-none") Чат
      li.nav-item(role="presentation" class="d-flex align-items-center")
        a.header-link(href="#contacts" class="text-light text-decoration-none nav-link active" id="contacts-tab" data-toggle="tab" role="tab" aria-controls="contacts" aria-selected="true")
          svg.icon-small(class="mr-2")
            use(xlink:href="images/dest/sprite/stack/svg/sprite.stack.svg#people")
          span(class="d-none d-xl-inline") Контакты
      li.nav-item(role="presentation" class="d-flex align-items-center")
        a.header-link(href="#chats" class="text-light text-decoration-none nav-link" id="chats-tab" data-toggle="tab" role="tab" aria-controls="chats" aria-selected="false")
          svg.icon-small(class="mr-2")
            use(xlink:href="images/dest/sprite/stack/svg/sprite.stack.svg#chat")
          span(class="d-none d-xl-inline") Сообщения
      li.nav-item(role="presentation" class="d-flex align-items-center")
        a.header-link(href="#profile" class="text-light text-decoration-none nav-link" id="profile-tab" data-toggle="tab" role="tab" aria-controls="profile" aria-selected="false")
          svg.icon-small(class="mr-2")
            use(xlink:href="images/dest/sprite/stack/svg/sprite.stack.svg#person")
          span(class="d-none d-xl-inline") Профиль
    
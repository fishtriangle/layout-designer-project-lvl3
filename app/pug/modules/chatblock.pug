//- chatblock.pug
.chatblock-title(class="border-bottom shadow-none text-reset text-decoration-none mx-1 radius-right-top-lg")
  img.avatar(src="images/dest/avatar_4.jpg")
  .chatblock-title-body
    h2.contact-name(class="text-bold") Вениамин Редакторович
    p.contact-status(class="text-small") Онлайн
include chatblock-body.pug
.chatblock-send(class="bg-white")
  form(class="mb-0")
    .form-group(class="border-top border-gray-base my-0 mx-5 d-flex flex-row justify-content-between align-items-center")
      label.sr-only(for="newMessage") 
      input.form-control(type="text", placeholder="Напишите сообщение..." class="px-0 shadow-none bg-white border-0")
      button(class="btn btn-primary avatar mx-2 my-3 border-white" type="submit")
        svg.icon-small
            use(xlink:href="images/dest/sprite/stack/svg/sprite.stack.svg#cursor") 
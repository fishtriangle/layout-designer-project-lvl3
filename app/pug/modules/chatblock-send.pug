div(class="chatblock-send w-100 bg-white pb-sm-0 pb-lg-2")
  form(class="mb-0")
    div(class="form-group border-top border-gray-base my-0 mx-3 mx-lg-5 d-flex flex-row justify-content-between align-items-center")
      label.sr-only(for="newMessage") 
      input(type="text", placeholder="Напишите сообщение..." class="form-control ml-3 ml-lg-0 px-0 shadow-none bg-white border-0")
      button(class="btn btn-primary icon-button mx-0 mx-lg-2 my-3 border-white d-flex align-items-center" type="submit")
        svg.icon-small
          use(xlink:href="images/dest/sprite/stack/svg/sprite.stack.svg#cursor") 

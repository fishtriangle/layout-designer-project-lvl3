//- for index.pug and chat.pug

-
  let findForm;

doctype html
html(lang='ru')
  
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(rel='icon' type='image/x-icon' href='favicon.ico')

    title Designer project lvl3

    link(rel='stylesheet' href='./css/styles.css')
  
  body
    main(class="m-0 p-lg-4 h-100")
      .row(class="radius-left-top-lg h-100")
        .block-left(class=['col-sm-12 col-lg-4 p-0 bg-white radius-left-lg h-100'])
          //- Подключение шапки сайта
          include header.pug
          .tab-content(id="myTabContent" class="radius-left-lg")
            include contacts.pug
            include chatlist.pug
            include profile.pug
            block chatblock-switch
            //if hexletSwitch == "index.html"
                include chatblock-switch.pug
        block block-right
        //if hexletSwitch == "index.html"
            .block-right(class=['col-lg-8 border-left border-gray-base bg-white radius-right-lg h-100'])
                include chatblock.pug
        //if hexletSwitch == "chat.html"
            .block-right(class=['col-lg-8 border-left border-gray-base bg-gray-base h-100 radius-right-lg'])
                include hello.pug
